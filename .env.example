# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Comma-separated list of admin Telegram user IDs (e.g., 123456789,987654321)
ADMIN_USER_IDS=your_telegram_user_id

# Database Configuration
# For local development (PostgreSQL running on localhost):
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/raffle_bot

# For Docker deployment (uncomment the line below and comment the line above):
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/raffle_bot

# PostgreSQL credentials (used by Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=raffle_bot

# Redis Configuration
# For local development (Redis running on localhost):
REDIS_URL=redis://localhost:6379/0

# For Docker deployment (uncomment the line below and comment the line above):
# REDIS_URL=redis://redis:6379/0

# YooKassa Configuration (for RUB payments) - DEPRECATED, use TON instead
YOOKASSA_SHOP_ID=your_shop_id_here
YOOKASSA_SECRET_KEY=your_secret_key_here

# TON Configuration (The Open Network)
# Get API key from https://toncenter.com
TON_CENTER_API_KEY=your_ton_center_api_key_here
# Bot's TON wallet address (UQxx... format)
TON_WALLET_ADDRESS=UQxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Bot's wallet mnemonic (24 words) - KEEP THIS SECURE!
TON_WALLET_MNEMONIC=word1 word2 word3 word4 word5 word6 word7 word8 word9 word10 word11 word12 word13 word14 word15 word16 word17 word18 word19 word20 word21 word22 word23 word24
# Network: "mainnet" for production, "testnet" for testing
TON_NETWORK=mainnet

# TON Connect Configuration (for wallet integration)
# Public URL to tonconnect-manifest.json file (must be accessible via HTTPS)
# Example: https://yourdomain.com/tonconnect-manifest.json
# For development/testing, you can use a service like GitHub Pages or ngrok
TON_CONNECT_MANIFEST_URL=https://your-domain.com/tonconnect-manifest.json

# Random.org API
RANDOM_ORG_API_KEY=your_random_org_api_key_here

# Bot Settings
MIN_PARTICIPANTS=10
STARS_ENTRY_FEE=10
RUB_ENTRY_FEE=100
TON_ENTRY_FEE=0.5
STARS_COMMISSION_PERCENT=20
RUB_COMMISSION_PERCENT=15
TON_COMMISSION_PERCENT=12

# Reserve Settings
STARS_RESERVE_MIN=3000
STARS_RESERVE_TARGET=5000
TON_RESERVE_MIN=10.0
TON_RESERVE_TARGET=20.0

# Withdrawal Settings
# Stars can be withdrawn starting from 1 star (sent as gift from admin)
MIN_WITHDRAWAL_STARS=1
MIN_WITHDRAWAL_RUB=100
MIN_WITHDRAWAL_TON=0.1

# Currency Settings
# DEPRECATED: Set to true to disable RUB payments and use only Telegram Stars
STARS_ONLY=false
# NEW: Set to true to use ONLY TON payments (recommended)
TON_ONLY=true

# Transaction Monitoring
TON_TRANSACTION_CHECK_INTERVAL=15
TON_TRANSACTION_CONFIRMATIONS=1

# Privacy Settings
# Set to false to hide usernames and show only first names
SHOW_USERNAMES=true

# Logging
LOG_LEVEL=INFO
